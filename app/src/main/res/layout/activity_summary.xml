<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_background"
    android:orientation="vertical"
    android:padding="36dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif"
        android:text="@string/your_account_details"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/text_view_account_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:textSize="16sp"
        tools:text="Title Firstname Lastname" />

    <TextView
        android:id="@+id/text_view_email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_accent"
        android:textSize="16sp"
        tools:text="@string/email_address" />

    <TextView
        android:id="@+id/text_view_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_accent"
        android:textSize="16sp"
        tools:text="Phone number" />

</LinearLayout>